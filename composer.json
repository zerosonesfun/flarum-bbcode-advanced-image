{
    "name": "zerosonesfun/flarum-bbcode-advanced-image",
    "description": "An image BBCode which allows more attributes/parameters than the default img BBCode. Extra options include: width, unit (for width), and class.",
    "type": "flarum-extension",
    "keywords": ["discussion", "BBCode", "images"],
    "license": "MIT",
    "authors": [
        {
            "name": "Billy Wilcosky",
            "homepage": "https://www.wilcosky.com",
            "role": "Creator"
        }
    ],
    "support": {
        "issues": "https://github.com/zerosonesfun/flarum-bbcode-advanced-image/issues",
        "source": "https://github.com/zerosonesfun/flarum-bbcode-advanced-image",
        "forum": "https://discuss.flarum.org"
    },
    "homepage": "https://www.wilcosky.com",
    "funding": [
        {
            "type": "website",
            "url": "https://www.wilcosky.com"
        }
    ],
    "require": {
        "flarum/core": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ZerosOnesFun\\AdvancedImage\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "BBCode - Advanced Image",
            "category": "feature",
            "icon": {
                "name": "fas fa-image",
                "backgroundColor": "#ddd",
                "color": "#000"
            }
        }
    }
}
